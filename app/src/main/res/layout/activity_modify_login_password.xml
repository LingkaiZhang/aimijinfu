<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical"
              tools:context="com.yuanin.aimifinance.activity.ModifyLoginPasswordActivity">

    <include
        android:id="@+id/includeTop"
        layout="@layout/top_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/normal_height"
        android:layout_marginLeft="@dimen/small_margin"
        android:gravity="center"
        android:text="需要验证您的原登录密码"
        android:textColor="@color/text_light_gray"
        android:textSize="@dimen/normal_text"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/small_margin">

        <EditText
            android:id="@+id/etOriginalPwd"
            style="@style/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/modify_login_password_input_original"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_light_gray"
            android:textSize="@dimen/normal_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/bg"/>


        <EditText
            android:id="@+id/etNewPwd"
            style="@style/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/modify_exchange_password_input_new"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_light_gray"
            android:textSize="@dimen/normal_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/bg"/>


        <EditText
            android:id="@+id/etNewPwdAgain"
            style="@style/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_height"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/modify_exchange_password_input_new_again"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_light_gray"
            android:textSize="@dimen/normal_text"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/big_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:background="@drawable/selector_theme_corner_button"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text"/>
</LinearLayout>
