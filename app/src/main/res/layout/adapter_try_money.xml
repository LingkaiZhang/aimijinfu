<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_twelve2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:background="@mipmap/red_packets_try_no_use_bg"
        android:gravity="center">


        <LinearLayout
            android:layout_width="@dimen/weight"
            android:layout_height="wrap_content"
            android:layout_weight="59"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/red_packet_dot"
                    android:drawablePadding="@dimen/margin_four"
                    android:singleLine="true"
                    android:text="@string/red_packets_try_tips"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/small_text"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_four"
                    android:drawableLeft="@mipmap/red_packet_dot"
                    android:drawablePadding="@dimen/margin_four"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/small_text"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_four"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStartDateDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/red_packet_dot"
                        android:drawablePadding="@dimen/margin_four"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/small_text"/>

                    <TextView
                        android:id="@+id/tvTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/red_packets_to"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/small_text"/>

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/small_text"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/weight"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMoneyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rmb_mark"
                    android:textColor="@color/try_money_yellow"
                    android:textSize="@dimen/normal_text"/>

                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/try_money_yellow"
                    android:textSize="22sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_eight"
                android:text="@string/use_now"
                android:textColor="@color/try_money_yellow"
                android:textSize="@dimen/small_text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
