<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yuanin.aimifinance.activity.FingerPasswordActivity">

    <include
        android:id="@+id/includeTop"
        layout="@layout/top_date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/includeTop"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_sixty"
        android:text="简单出借，就是这么任性"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/normal_text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_finger_passwrod_btn"/>

        <TextView
            android:id="@+id/tvVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_twelve2"
            android:text="点击验证"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/normal_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_eight"
            android:text="取消"
            android:textColor="@drawable/selector_text_light_gray_click"
            android:textSize="@dimen/small_text"/>

        <TextView
            android:id="@+id/tvChangeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_eight"
            android:text="切换账号"
            android:textColor="@drawable/selector_text_light_gray_click"
            android:textSize="@dimen/small_text"/>

        <TextView
            android:id="@+id/tvShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_eight"
            android:text="|"
            android:textColor="@color/text_light_gray"
            android:textSize="@dimen/small_text"/>

        <TextView
            android:id="@+id/tvGestureLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_eight"
            android:padding="@dimen/margin_eight"
            android:text="手势密码验证"
            android:textColor="@drawable/selector_text_light_gray_click"
            android:textSize="@dimen/small_text"/>
    </LinearLayout>

</RelativeLayout>
