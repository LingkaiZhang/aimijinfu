<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_eight"
        android:paddingTop="@dimen/margin_eight"
        android:textColor="@color/text_black"
        android:textSize="@dimen/normal_text"
        />

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin">


        <LinearLayout
            android:layout_width="@dimen/weight"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_eight"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/normal_text"
                android:text="购买爱米定期1月C171109"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light_gray"
                android:textSize="@dimen/small_text"
                android:text="12月17日 10:35"
                android:layout_marginTop="@dimen/margin_eight"/>


        </LinearLayout>


        <!--<TextView
            android:id="@+id/tvMoney"
            android:layout_width="@dimen/weight"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/text_black"
            android:textSize="@dimen/normal_text"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="@dimen/weight"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text_light_gray"
            android:textSize="@dimen/normal_text"/>-->
        <LinearLayout
            android:layout_width="@dimen/weight"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_eight"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="right"
                android:textColor="@color/text_black"
                android:textSize="@dimen/normal_text"
                android:text="交易成功"/>

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/text_light_gray"
                android:textSize="@dimen/small_text"
                android:singleLine="true"
                android:text="-100000.00元"
                android:layout_marginTop="@dimen/margin_eight"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
