<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:background="@mipmap/auto_right_more_bg"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tvRule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_auto_right_pop"
            android:drawableLeft="@mipmap/auto_right_more_tips"
            android:gravity="center"
            android:drawablePadding="-5dp"
            android:paddingLeft="@dimen/margin_twelve2"
            android:text="规则说明"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"/>
    </LinearLayout>

    <View
        android:layout_width="80dp"
        android:layout_height="@dimen/line"
        android:layout_gravity="center_horizontal"
        android:alpha="0.5"
        android:background="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_auto_right_pop"
            android:drawableLeft="@mipmap/auto_right_more_record"
            android:gravity="center"
            android:drawablePadding="-5dp"
            android:paddingLeft="@dimen/margin_twelve2"
            android:text="出借记录"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"/>
    </LinearLayout>

</LinearLayout>