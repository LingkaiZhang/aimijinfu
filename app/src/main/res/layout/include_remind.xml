<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvNoContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/small_margin"
        android:drawableTop="@mipmap/no_content"
        android:gravity="center_horizontal"
        android:text="@string/no_content"
        android:textColor="@color/text_light_gray"
        android:textSize="@dimen/big_text"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llNoNet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNoNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/small_margin"
            android:drawableTop="@mipmap/no_net"
            android:gravity="center_horizontal"
            android:textColor="@color/text_light_gray"
            android:textSize="@dimen/big_text"/>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_twenty_four"
            android:background="@drawable/selector_no_net_click"
            android:paddingBottom="@dimen/margin_eight"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin"
            android:paddingTop="@dimen/margin_eight"
            android:text="@string/click_refresh"
            android:textColor="@color/text_light_gray"
            android:textSize="@dimen/normal_text"/>
    </LinearLayout>
</LinearLayout>
