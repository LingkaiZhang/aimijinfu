<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:context="com.yuanin.aimifinance.activity.GesturePasswordVerifyActivity">

    <include
        android:id="@+id/includeTop"
        layout="@layout/top_date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/includeTop"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_sixty"
        android:text="简单出借，就是这么任性"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/normal_text"/>


    <FrameLayout
        android:id="@+id/gesture_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/small_margin"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_eight"
            android:text="取消"
            android:textColor="@drawable/selector_text_light_gray_click"
            android:textSize="@dimen/small_text"/>

        <TextView
            android:id="@+id/tvChangeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_eight"
            android:text="忘记手势密码"
            android:textColor="@drawable/selector_text_light_gray_click"
            android:textSize="@dimen/small_text"/>

        <TextView
            android:id="@+id/tvShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_eight"
            android:text="|"
            android:textColor="@color/text_light_gray"
            android:textSize="@dimen/small_text"/>

        <TextView
            android:id="@+id/tvChangeFinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_eight"
            android:padding="@dimen/margin_eight"
            android:text="指纹密码验证"
            android:textColor="@drawable/selector_text_light_gray_click"
            android:textSize="@dimen/small_text"/>
    </LinearLayout>
</RelativeLayout>